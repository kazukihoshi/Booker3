<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="field">
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :Body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "Update Book" %>
  </div>

  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", books_path %>
<% end %>